{# Notes/note.html.twig #}
{% extends 'NoteBundle::layout.html.twig ' %}

{% block title %}

    <title>List of Categories</title>

{% endblock %}

{% block notepad_content %}

    <div class="page-header">
        <h1>
            List of Categories
            <div class="btn-group pull-right">
                <a role="button" class="btn btn-default" href="{{ path('newNote') }}">New Note</a>
                <a role="button" class="btn btn-default" href="{{ path('newCategory') }}">New Category</a>
            </div>
        </h1>      
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th></th>
                <th></th>
              </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.label }}</td>
                    <td>
                        <a role="button" class="textprimary" 
                        href="{{ path('editCategory', { 'id': category.id }) }}">Edit</a>
                    </td>
                    <td>
                        <a role="button" class="text-danger" 
                        href="{{ path('delCategory', { 'id': category.id }) }}">Delete</a>
                    </td>
              </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}