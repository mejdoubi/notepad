{# base.html.twig #}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" >
<head>
    {% block title %}
        <title>Notepad</title>
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="{{ asset('notepad.ico') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#notepadNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>                        
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">
                <img src="{{ asset('img/notepad.png') }}">
            </a>
            <h3 class="navbar-text"><a href="{{ path('home') }}" style="text-decoration:none;">Notepad</a></h3>
        </div>
        <div class="collapse navbar-collapse" id="notepadNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ path('notes') }}">Notes</a></li>
                <li><a href="{{ path('categories') }}">Categories</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
<div class="container-fluid bg-1">    
    <div class="row content">
        <div class="col-xs-2 col-md-2"></div>
        <div class="col-xs-8 col-md-8">

            {% for flash_message in app.session.flashBag.get('notice') %}
                <div class="alert alert-info">
                    {{ flash_message }}
                </div>
            {% endfor %}

            {% block notepad_content %}{% endblock %}
                
            </div>
      <div class="col-xs-2 col-md-2"></div>
    </div>
</div>
</div>

<footer class="footer bg-2 text-center">
    <div class="container">
        <span>ECAM - Othman Mejdoubi</span>
    </div>
</footer>

<script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
<script src="{{ asset('js/bootstrap.min.js') }}"></script>
<script src="{{ asset('js/main.js') }}"></script>

</body>
</html>